<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>
</head>
<body>
    <%- include("partials/navbar") %>
    <div class="container">
        <div class="row message">
            <div class="column">
                <h4>Messages</h4>
            </div>
        </div>

        <% messages.forEach(message => { %>
            <div class="row mb20 message">
                <div class="column column-75">
                    <p class="breakword bold"> Subject : <%= message.subject %></p>
                    <p class="breakword"><%= message.body %></p>
                </div>
    
                <div class="column column-25">
                    <span class="bold"><%= message.sender %></span> <span><%= message.time %> <%= message.date %></span>

                    <form action="/sendmessage" method="get" class="mb0">
                        <input type="hidden" name="recipientid" value="<%= message.sender_id %>">
                        <input type="hidden" name="cardid" value="<%= message.card_id  %>">
                        <input class="button button-primary bluebutton textwhite mb0" type="submit" value="Reply">
                    </form>

                </div>
            </div>
            <% }) %>
    </div>
    <%- include("partials/footer")  %>
</body>
</html>