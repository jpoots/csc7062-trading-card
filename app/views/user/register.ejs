<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>
</head>
<body>
    <%- include("partials/navbar") %>

    <form action="/register" method="post" class="container logsigncontainer mt20">

        <% if (typeof message !== "undefined") { %>
            <div class="row">
                <div class="column">
                    <h4 class="textred centertext"><%= message  %></h4>
                </div>
            </div>
        <% } %>

        <div class="row">
            <div class="column centertext">
                <img src="images/pokeball_straight.png" alt="" width="72">
            </div>
        </div>

        <div class="row">
            <div class="column">
                <h3 class="centertext">Please Sign In</h1>
            </div>
        </div>
        

        <div class="row">
            <div class="column">
                <input type="email" placeholder="email" name="email" class="signformfield" maxlength="254" required>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <input type="text" placeholder="display name" name="displayname" class="signformfield" maxlength="15" required>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <!--  https://www.w3schools.com/howto/howto_js_password_validation.asp-->
                <input type="password" placeholder="password" name="password" class="signformfield" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"  required>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <input type="password" placeholder="confirm password" name="confirmpassword" class="signformfield" required>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <input class="yellowbutton button w100 textblack" type="submit" value="Sign Up">      
            </div>
        </div>

    </form>
    <%- include("partials/footer")  %>
</body>
</html>